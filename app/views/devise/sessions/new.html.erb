<div class="ui form">
  <h2>Log in</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "ui form" }) do |f| %>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, required: false, autofocus: true, autocomplete: "email", class: "ui input" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, required: false, autocomplete: "current-password", class: "ui input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, class: "ui checkbox" %>
        <%= f.label :remember_me, class: "ui checkbox" %>
      </div>
    <% end %>

    <div class="field">
      <%= f.submit "Log in", class: "ui button" %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
